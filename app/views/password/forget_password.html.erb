<div class="container">
<br>
<h3 class="display-4"> Forgot Password </h3>
<br>
<br>


<%= form_with url:"/password/forget_password", local: true,method: :post do |form| %>
   
   <p>
       <%= form.label "Email *" %><br>
       <%= form.text_field :email, :class => "form-fields"%>
   </p>
   <%= form.submit "Send", :id => "form-btn" %>  
   <br>
   <br>
   <p> Don't have an Account?       <%= link_to('SignUp', { action: 'signup', controller: 'account'},    class: 'nav-link') %> 
     </p>
 <% end %>
 


 
</div>